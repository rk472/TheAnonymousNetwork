<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context="com.example.ramakanta.theanonymousnetwork.StorageActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/doc_image"
        android:layout_width="match_parent"
        android:layout_height="415dp"
        android:src="@mipmap/no_image"
        android:transitionName="storage" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/doc_name"
        android:text="name"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/colorAccentWhite"
        android:transitionName="s_name"
        />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/upload_doc"
            android:text="upload"
            android:layout_marginRight="50dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/download_doc"
            android:text="download"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>

</LinearLayout>
