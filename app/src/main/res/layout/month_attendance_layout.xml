<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/month_attendance_subject"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="Subject Name"
            android:textSize="20dp"
            android:padding="10dp"
            android:textColor="@color/colorAccentWhite"
            android:background="@drawable/table_item_shape"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="110dp"
            android:id="@+id/month_attendance_total_class"
            android:layout_height="match_parent"
            android:text="total"
            android:textSize="20dp"
            android:padding="10dp"
            android:background="@drawable/table_item_shape"
            android:textColor="@color/colorAccentWhite"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="110dp"
            android:id="@+id/month_attendance_class_attended"
            android:textColor="@color/colorAccentWhite"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="Att"
            android:textAlignment="center"
            android:background="@drawable/table_item_shape"/>

    </LinearLayout>

</android.support.v7.widget.CardView>